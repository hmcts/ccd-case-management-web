#!groovy

properties([
    // H allow predefined but random minute see https://en.wikipedia.org/wiki/Cron#Non-standard_characters
    pipelineTriggers([cron('H 05 * * *')])
])

@Library("Infrastructure")

def type = "angular"
def product = "ccd"
def app = "case-management-web"

List<LinkedHashMap<String, Object>> secrets = [
    secret('ccd-caseworker-autotest-email', 'CCD_CASEWORKER_AUTOTEST_EMAIL'),
    secret('ccd-caseworker-autotest-password', 'CCD_CASEWORKER_AUTOTEST_PASSWORD'),
]

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
    [ $class: 'AzureKeyVaultSecret',
      secretType: 'Secret',
      name: secretName,
      version: '',
      envVariable: envVar
    ]
}
    
withNightlyPipeline(type, product, app) {
    
    loadVaultSecrets(secrets)
    
    enableSlackNotifications('#ccd-nightly-builds')
    enableFunctionalTest()
    //enablesmokeTest()
    //enableCrossBrowserTest()

    afterCheckout {
        sh "yarn cache clean"
    }
    
    after('functionalTest') {
        //archiveArtifacts 'test/functional-tests/results/index.html'

        publishHTML(target:[
               reportDir            : "test/functional-tests/results/",
               reportFiles          : "index.html",
               reportName           : "Functional Tests",
               alwaysLinkToLastBuild: true
       ])

    }
}
